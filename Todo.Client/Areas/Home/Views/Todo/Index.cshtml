@model IEnumerable<TodoItem>

<h5>My Todos</h5>

@if (Model.Count() < 1)
{
    <p class="lead mt-4">Nothing in the database... try adding a todo item</p>
    <a class="btn btn-outline-primary" asp-controller="Todo" asp-action="Add">Add Todo</a>
} else 
{
    <table class="table table-bordered table-hover table-sm">
      <thead>
        <tr>
          <th scope="col">Description</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>

          @foreach (var todo in Model)
          {
              <tr>
                <td>@todo.Description</td>
                <td>
                    <a class="btn btn-success">Mark as complete</a>
                    <a class="btn btn-info" asp-controller="Todo" asp-action="Edit" asp-route-id="@todo.Id">Edit</a>
                    <a class="btn btn-danger" asp-controller="Todo" asp-action="Delete" asp-route-id="@todo.Id">Delete</a>
                </td>
              </tr>
          }
        
      </tbody>
    </table>
}